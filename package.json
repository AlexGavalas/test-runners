{
    "name": "test-runners",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "ava": "ava ./tests/ava.ts",
        "uvu": "uvu -r tsm uvu/",
        "mocha": "mocha ./tests/mocha.ts",
        "jasmine": "NODE_OPTIONS=--loader=ts-node/esm jasmine --config=jasmine.json",
        "jest": "jest -- ./tests/jest.spec.ts",
        "vitest": "vitest run --coverage 'vitest'",
        "node:test": "node --loader ts-node/esm ./tests/pure-node.ts"
    },
    "dependencies": {
        "react": "18.0.0",
        "react-dom": "18.0.0"
    },
    "devDependencies": {
        "@types/jasmine": "4.0.3",
        "@types/jest": "28.1.3",
        "@types/mocha": "9.1.1",
        "@types/node": "18.0.0",
        "@types/react": "18.0.0",
        "@types/react-dom": "18.0.0",
        "@vitejs/plugin-react": "1.3.0",
        "ava": "4.3.0",
        "c8": "7.11.3",
        "jasmine": "4.2.1",
        "jasmine-ts": "0.4.0",
        "jest": "28.1.2",
        "jest-environment-jsdom": "28.1.2",
        "mocha": "10.0.0",
        "msw": "0.42.3",
        "ts-jest": "28.0.5",
        "ts-node": "10.8.1",
        "tsm": "2.2.1",
        "typescript": "4.6.3",
        "uvu": "0.5.4",
        "vite": "2.9.9",
        "vitest": "0.16.0"
    },
    "ava": {
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    }
}
